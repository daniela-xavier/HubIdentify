{
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "{AppDir}\\logs\\HubIdentLog_.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Version}] ApiKeyID:{ApiKeyID} CorrelationID:{CorrelationID} {hostname} {agencia} [{Level:u3}] {Method}: {Message:lj} {NewLine}{Exception}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Properties": {
      "Version": "1.0",
      "WithCorrelationId": "#{Guid.NewGuid().ToString()}"
    }
  },
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterName": "CustomTimePrefixingFormatter",
      "FormatterOptions": {
        "CustomPrefix": "|-<[",
        "CustomSuffix": "]>-|",
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": true
        }
      }
    }
  },
  "AllowedHosts": "*",
  "SignalRSettings": {
    "HubUrl": "http://localhost:5296/identifyClient",
    "ApiKey": "020de488-2aee-42ad-990d-1159fd43d3ea",
    "ClientSecret": "E4EB72AEE7CB1FBF2B18A4659ABFA",
    "ClientId": "ff8e6784-4262-454e-87c8-58689897461e"
  }
}
